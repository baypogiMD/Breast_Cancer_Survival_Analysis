'''
# 03 – Clinical Feature Engineering

## Purpose
This notebook creates **clinically meaningful engineered features** from the
cleaned breast cancer dataset to improve:

- Survival modeling
- Risk stratification
- Interpretability of predictive models

All engineered features are grounded in **oncology practice and literature**.
'''

import pandas as pd
import numpy as np

pd.set_option("display.max_columns", None)

# Load cleaned dataset
df = pd.read_csv("../data/processed/breast_cancer_cleaned.csv")

df.head()

# Avoid division by zero
df["node_ratio"] = np.where(
    df["regional_node_examined"] > 0,
    df["reginol_node_positive"] / df["regional_node_examined"],
    0
)

df[["regional_node_examined", "reginol_node_positive", "node_ratio"]].head()

def categorize_node_burden(n):
    if n == 0:
        return "0"
    elif 1 <= n <= 3:
        return "1–3"
    elif 4 <= n <= 9:
        return "4–9"
    else:
        return "10+"

df["node_burden_group"] = df["reginol_node_positive"].apply(categorize_node_burden)

df["node_burden_group"].value_counts()

def tumor_size_category(size):
    if size < 20:
        return "<20mm"
    elif 20 <= size < 50:
        return "20–49mm"
    else:
        return "50mm+"

df["tumor_size_group"] = df["tumor_size"].apply(tumor_size_category)

df["tumor_size_group"].value_counts()

df["high_risk"] = (
    (df["tumor_size"] >= 50) |
    (df["reginol_node_positive"] >= 4) |
    (df["grade"] == 3)
).astype(int)

df["high_risk"].value_counts()

df["advanced_disease"] = (
    df["ajcc_stage"].isin(["III", "IV"]) |
    (df["t_stage"].isin(["T3", "T4"])) |
    (df["n_stage"].isin(["N2", "N3"]))
).astype(int)

df["advanced_disease"].value_counts()

# Ordinal encodings
grade_map = {1: 1, 2: 2, 3: 3}
t_stage_map = {"T1": 1, "T2": 2, "T3": 3, "T4": 4}
n_stage_map = {"N0": 0, "N1": 1, "N2": 2, "N3": 3}

df["grade_ord"] = df["grade"].map(grade_map)
df["t_stage_ord"] = df["t_stage"].map(t_stage_map)
df["n_stage_ord"] = df["n_stage"].map(n_stage_map)

df[["grade_ord", "t_stage_ord", "n_stage_ord"]].head()

engineered_cols = [
    "node_ratio",
    "node_burden_group",
    "tumor_size_group",
    "high_risk",
    "advanced_disease",
    "grade_ord",
    "t_stage_ord",
    "n_stage_ord"
]

df[engineered_cols].describe(include="all")

output_path = "../data/processed/breast_cancer_features.csv"
df.to_csv(output_path, index=False)

output_path

