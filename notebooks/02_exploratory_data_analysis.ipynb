'''
# 02 â€“ Exploratory Data Analysis (EDA)

## Purpose
This notebook performs exploratory analysis on the cleaned breast cancer dataset to:

- Understand patient demographics
- Explore tumor characteristics
- Examine staging distributions
- Identify relationships with survival outcomes

The goal is to generate **clinical intuition and hypothesis-driven insights**
before feature engineering and modeling.

'''

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

sns.set(style="whitegrid")
pd.set_option("display.max_columns", None)

# Load cleaned dataset
df = pd.read_csv("../data/processed/breast_cancer_cleaned.csv")

df.head()

print(f"Total patients: {len(df)}")

df["vital_status"].value_counts(normalize=True).rename("proportion")

plt.figure(figsize=(8, 5))
plt.hist(df["age"], bins=25)
plt.xlabel("Age")
plt.ylabel("Number of Patients")
plt.title("Age Distribution at Diagnosis")
plt.show()

sns.boxplot(
    data=df,
    x="vital_status",
    y="age"
)
plt.title("Age Distribution by Vital Status")
plt.show()

df["race"].value_counts().plot(kind="bar", figsize=(8, 4))
plt.title("Race Distribution")
plt.ylabel("Number of Patients")
plt.show()

marital_mortality = (
    df.groupby("marital_status")["event"]
      .mean()
      .sort_values(ascending=False)
)

marital_mortality.plot(kind="bar", figsize=(8, 4))
plt.title("Mortality Rate by Marital Status")
plt.ylabel("Mortality Rate")
plt.show()

plt.figure(figsize=(8, 5))
plt.hist(df["tumor_size"], bins=30)
plt.xlabel("Tumor Size")
plt.ylabel("Number of Patients")
plt.title("Tumor Size Distribution")
plt.show()

sns.boxplot(
    data=df,
    x="vital_status",
    y="tumor_size"
)
plt.title("Tumor Size by Vital Status")
plt.show()

grade_survival = df.groupby("grade")["survival_months"].mean()

grade_survival.plot(kind="bar", figsize=(6, 4))
plt.title("Average Survival Months by Tumor Grade")
plt.ylabel("Average Survival (Months)")
plt.show()

df["t_stage"].value_counts().plot(kind="bar")
plt.title("T Stage Distribution")
plt.ylabel("Number of Patients")
plt.show()

df["n_stage"].value_counts().plot(kind="bar")
plt.title("N Stage Distribution")
plt.ylabel("Number of Patients")
plt.show()

stage_survival = (
    df.groupby("ajcc_stage")["survival_months"]
      .mean()
      .sort_values(ascending=False)
)

stage_survival.plot(kind="bar", figsize=(7, 4))
plt.title("Average Survival by AJCC Stage")
plt.ylabel("Average Survival (Months)")
plt.show()

plt.figure(figsize=(6, 6))
plt.scatter(
    df["regional_node_examined"],
    df["reginol_node_positive"],
    alpha=0.4
)
plt.xlabel("Nodes Examined")
plt.ylabel("Nodes Positive")
plt.title("Lymph Node Examination vs Positivity")
plt.show()

sns.boxplot(
    data=df,
    x="event",
    y="reginol_node_positive"
)
plt.title("Positive Lymph Nodes by Survival Event")
plt.xlabel("Event (0 = Alive, 1 = Dead)")
plt.show()

er_survival = df.groupby("estrogen_status")["survival_months"].mean()

er_survival.plot(kind="bar")
plt.title("Average Survival by Estrogen Receptor Status")
plt.ylabel("Average Survival (Months)")
plt.show()

