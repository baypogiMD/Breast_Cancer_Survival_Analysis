'''
# 04 – Survival Analysis

## Purpose
This notebook performs **time-to-event analysis** on the breast cancer dataset to:

- Estimate overall survival using Kaplan–Meier curves
- Compare survival across clinical subgroups
- Quantify prognostic effects using Cox proportional hazards models

This analysis mirrors standard methods used in **clinical oncology research**.
'''

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

from lifelines import KaplanMeierFitter, CoxPHFitter
from lifelines.statistics import logrank_test

pd.set_option("display.max_columns", None)

# Load feature-enhanced dataset
df = pd.read_csv("../data/processed/breast_cancer_features.csv")

df.head()

kmf = KaplanMeierFitter()

T = df["survival_months"]
E = df["event"]

kmf.fit(T, event_observed=E, label="Overall Survival")

plt.figure(figsize=(8, 5))
kmf.plot()
plt.xlabel("Time (Months)")
plt.ylabel("Survival Probability")
plt.title("Overall Kaplan–Meier Survival Curve")
plt.show()

plt.figure(figsize=(8, 5))

for label, subset in df.groupby("high_risk"):
    kmf.fit(
        subset["survival_months"],
        subset["event"],
        label=f"High Risk = {label}"
    )
    kmf.plot()

plt.xlabel("Time (Months)")
plt.ylabel("Survival Probability")
plt.title("Survival by High-Risk Status")
plt.show()

high = df[df["high_risk"] == 1]
low = df[df["high_risk"] == 0]

logrank_results = logrank_test(
    high["survival_months"],
    low["survival_months"],
    event_observed_A=high["event"],
    event_observed_B=low["event"]
)

logrank_results.summary

plt.figure(figsize=(9, 6))

for stage in sorted(df["ajcc_stage"].dropna().unique()):
    subset = df[df["ajcc_stage"] == stage]
    kmf.fit(subset["survival_months"], subset["event"], label=f"Stage {stage}")
    kmf.plot()

plt.xlabel("Time (Months)")
plt.ylabel("Survival Probability")
plt.title("Survival by AJCC Stage")
plt.show()

cox_features = [
    "age",
    "tumor_size",
    "grade_ord",
    "node_ratio",
    "high_risk",
    "advanced_disease"
]

cox_df = df[cox_features + ["survival_months", "event"]].dropna()

cox_df.head()

cph = CoxPHFitter()
cph.fit(
    cox_df,
    duration_col="survival_months",
    event_col="event"
)

cph.print_summary()

plt.figure(figsize=(6, 4))
cph.plot()
plt.title("Cox Model Hazard Ratios")
plt.show()

